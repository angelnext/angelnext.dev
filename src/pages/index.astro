---
import Layout from '@layouts/Default.astro';
import RecentBlogPosts from '@components/generic/RecentBlogPosts.astro';
import MobileSocials from '@components/home/MobileSocials.astro';
import { Pill } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';
import { Card } from '@eliancodes/brutal-ui';

const favs = [
  "TypeScript",
  "TailwindCSS",
  "Rust",
  "Go",
  "Astro",
  "Svelte",
  "UnoCSS",
  "Kotlin",
  "Ktor",
  "NestJS",
  "Elm",
  "Next.js",
  ".NET",
  "alpine.js",
  "WASM",
  "gofiber",
  "PostgreSQL"
]
---

<Layout
  title='Home'
  pageTitle='AngelNext | Home'
  description='I am a Full Stack Developer that loves open source! I love coding open-source solutions to every-day problems.'
>
  <main class='bg-gray p-6'>
    <MobileSocials />
    <section id='about' class='grid md:grid-cols-8 gap-8 mt-4'>
      <h2 class='hidden'>About Brutal</h2>
      <div class='md:col-span-5'>
        <Card>
          <div class='flex flex-col justify-between items-start gap-4'>
            <p class='mt-4 outfit text-2xl md:text-5xl lg:text-7xl'>
              Who am <a href='/'>I</a>?
            </p>
            <p class='mt-2 outfit text-xl md:text-3xl lg:text-5xl'>
              Student and Programmer
            </p>
            <p class="poppins">I am a Full Stack Developer that loves open source! I love coding open-source solutions to every-day problems.</p>
            <Button target={'_self'} href='/blog/'>
              Check out the blog &rarr;
            </Button>
          </div>
        </Card>
      </div>
      
      <div class='md:col-span-3'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif'>
            Contact Me!
          </h2>
          <p class='poppins mb-4'>
            You can always contact me through Discord just sending me a Message Request, but if you needed another contact option you can
          </p>
          <Button target={'_self'} href='mailto:contact@angelnext.dev'>
            Email me &rarr;
          </Button>
          <p class='poppins mt-4'>
            (It might take me a couple of days to reach you back)
          </p>
        </Card>
      </div>

      <div class='md:col-span-4'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif'>
            Projects
          </h2>
          <p class='poppins mb-4'>
            I have a ton of open source projects! This list will be expanded with time, since I'll have more time to work on projects, but I still find some time to work on some of my projects.
          </p>
          <Button target={'_self'} href='/blog/tags/project'>
              Check out all of my projects! &rarr;
          </Button>
        </Card>
      </div>

      <div class='md:col-span-4'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif'>
            Favourite Technologies
          </h2>
           <ul class='flex gap-4 mb-4 flex-wrap'>
            {
              favs.map((item) => (
                <li>
                  <Pill>
                    {item}
                  </Pill>
                </li>
              ))
            }
          </ul>
        </Card>
      </div>
    </section>
    <RecentBlogPosts />
  </main>
</Layout>
